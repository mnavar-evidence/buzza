{
  "name": "buzza-mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server exposing Buzza mock insights via Apps SDK.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/copy-ui.mjs",
    "start": "node dist/index.js",
    "start:sse": "node dist/httpServer.js",
    "dev": "ts-node --esm --experimentalSpecifierResolution=node src/index.ts",
    "dev:sse": "ts-node --esm --experimentalSpecifierResolution=node src/httpServer.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "axios": "^1.7.7",
    "express": "^4.19.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.5",
    "jsdom": "^24.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  }
}
